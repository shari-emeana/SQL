SELECT * FROM Favorite_Books

--display the database ordered by rank.
SELECT * FROM Favorite_books
ORDER BY rank;

--display the database by top 3 favorite books
SELECT * FROM Favorite_books 
ORDER BY rank
LIMIT 3;
