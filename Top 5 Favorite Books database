CREATE TABLE Favorite_Books (id INTEGER PRIMARY KEY, name TEXT, rank INTEGER);

INSERT INTO Favorite_books VALUES(111, "The Laws of Human Nature", 2);
INSERT INTO Favorite_books VALUES(121, "Your Next Five Moves", 1);
INSERT INTO Favorite_books VALUES(131, "The Magic of Thinking Big", 4);
INSERT INTO Favorite_books VALUES(141, "The Compound Effect", 3);
